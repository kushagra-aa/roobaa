{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "target": "ES2020",
        "removeComments": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        // "allowJs": true,
        // "checkJs": true,
        "strict": false,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist/*",
        "src/static"
    ],
}